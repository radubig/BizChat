

@foreach (BizChat.Models.Server server in ViewBag.Servers)
{
    @if (ViewBag.ServerId != null && server.Id == ViewBag.ServerId)
    {
        <a style="text-decoration: inherit; color: inherit; background-color:lightgreen; border: 1px solid" asp-controller="Servers" asp-action="Index" asp-route-id="@server.Id">@server.Name</a>
    }
    else
    {
        <a style="text-decoration: inherit; color: inherit; border: 1px solid" asp-controller="Servers" asp-action="Index" asp-route-id="@server.Id">@server.Name</a>
    }
}